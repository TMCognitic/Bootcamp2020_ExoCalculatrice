<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="DefaultStartGradientBrushColor" A="0xFF" R="0xFF" G="0xFF" B="0xFF" />
    <Color x:Key="ScreenBorderColor" A="0xFF" R="0xD5" G="0xD9" B="0xB9" />
    <Style TargetType="Border" x:Key="ScreenBorderStyle">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="-0.2" Color="{StaticResource DefaultStartGradientBrushColor}" />
                    <GradientStop Offset=".4" Color="{StaticResource ScreenBorderColor}" />
                    <GradientStop Offset=".6" Color="{StaticResource ScreenBorderColor}" />
                    <GradientStop Offset="1.2" Color="{StaticResource DefaultStartGradientBrushColor}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>        
        <Setter Property="Padding" Value="5,0" />
    </Style>
</ResourceDictionary>